{
    // See https://go.microsoft.com/fwlink/?Link...
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_debug_cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "../../"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/Debug"
            }
        },
        {
            "label": "make_debug",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build/Debug"
            }
        },
        {
            "label": "build_debug",
            "dependsOn": [
                "build_debug_cmake",
                "make_debug"
            ],
            
        },
        {
            "label": "build_release_cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Release",
                "../../"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/Release"
            }
        },
        {
            "label": "make_release",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build/Release"
            }
        },
        {
            "label": "build_release",
            "dependsOn": [
                "build_release_cmake",
                "make_release"
            ],
            
        },
    ]
}